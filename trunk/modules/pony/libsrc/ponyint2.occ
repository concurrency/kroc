                    CLAIM link.mgr.handle
                      SEQ
                        --{{{  OUT message
                        IF
                          output.msgs
                            CLAIM int.msg.handle
                              SEQ
                                int.msg.handle[to.handler] ! msg.str; "ctb.hdlr "
                                int.msg.handle[to.handler] ! msg.int; own.nct.id
                                int.msg.handle[to.handler] ! msg.str; ": OUT linkmgrh: get.link.handle; "
