                          int.msg.handle[to.handler] ! msg.str; "ctb.hdlr "
                          int.msg.handle[to.handler] ! msg.int; own.nct.id
                          int.msg.handle[to.handler] ! msg.str; ": OUT linkh 0: forncthandler.new.other.end.confirm; "
