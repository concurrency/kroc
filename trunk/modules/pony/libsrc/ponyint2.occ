                                int.msg.handle[to.handler] ! msg.int; own.nct.id
                                int.msg.handle[to.handler] ! msg.str; ": IN linkmgrh: get.link.handle.confirm; [cli-end]"
                                int.msg.handle[to.handler] ! msg.end; FALSE
