# jEdit only needs to load the plugin the first time the user accesses it
# the presence of this property also tells jEdit the plugin is using the new API
plugin.org.transterpreter.jeditsparkleplugin.JEditSparklePlugin.activate=startup
plugin.org.transterpreter.jeditsparkleplugin.JEditSparklePlugin.usePluginHome=true

# These two properties are required for all plugins
plugin.org.transterpreter.jeditsparkleplugin.JEditSparklePlugin.name=jEdit Sparkle Plugin
plugin.org.transterpreter.JEditSparklePlugin.author=Christian L. Jacobsen

# version number == jEdit version number
plugin.org.transterpreter.jeditsparkleplugin.JEditSparklePlugin.version=0.1
plugin.org.transterpreter.jeditsparkleplugin.JEditSparklePlugin.files=JEditSparkleNativeBridge.dylib

# online help
plugin.org.transterpreter.jeditsparkleplugin.JEditSparklePlugin.docs=index.html

# we only have one dependency, jEdit 4.2final, since we use the new plugin API
plugin.org.transterpreter.jeditsparkleplugin.JEditSparklePlugin.depend.0=jedit 04.02.99.00
