#INCLUDE "wiring.module"

PROC flash.pin (VAL INT pin, on, off)
  SEQ
    pinMode (pin, OUTPUT)
    WHILE TRUE
      SEQ
        digitalWrite (pin, HIGH)
        delay (on)
        digitalWrite (pin, LOW)
        delay (off)
:

PROC main ()
  -- Configures all digital and analog pins as output
  PAR i = 2 FOR 17
    flash.pin (i, i * 100, i * 230)
:
